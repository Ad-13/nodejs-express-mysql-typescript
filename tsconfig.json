{
  "compilerOptions": {
    "target": "ES2021",
    "types": [
      "swagger-ui-express"
    ],
    "module": "NodeNext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@db/*": ["database/*"],
      "@dtos/*": ["dtos/*"],
      "@errors/*": ["errors/*"],
      "@enums/*": ["helpers/enums/*"],
      "@helpersTypes/*": ["helpers/types/*"],
      "@utils/*": ["helpers/utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
